{{google-recaptcha onVerify=(action 'verify') isVisible=(if notRobot false true)}}
{{#if user.authenticated}}
    <div class="ui feed">
        <div class="event">
            <div class="label">
                <img src={{user.avatarUrl}}>
            </div>
            <div class="content">
                {{user.name}}
            </div>
            <div class="meta">
                <button class="ui small red basic button" {{action 'logout'}}>Logout</button>
            </div>
        </div>
    </div>
{{else}}
    {{#if notRobot}}
        <form class="ui form">
            <div class="ui small action input">
                {{input value=userName placeholder="Introduce yourself"}}
                <button class="ui {{if userName.length 'green' 'disabled' }} button" {{action 'authenticate'}}>Ok</button>
            </div>
        </form>
    {{/if}}
{{/if}}