{{chat-user user=user}}
<div class="ui comments">
    <h3 class="ui dividing header">Main channel</h3>
    {{#each messages as |message|}}
        {{chat-message user=message.user body=message.body date=message.date avatar=message.avatar}}
    {{/each}}
    {{#if user.authenticated}}
        <form class="ui reply form">
            <div class="field">
                {{input value=body placeholder="Type here" maxlength='500' id="reply"}}
            </div>
            <input type="submit" class="ui primary button" value="Send" {{action 'send' }}>
        </form>
    {{/if}}
</div>