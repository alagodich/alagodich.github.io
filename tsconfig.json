{
  "compilerOptions": {
    "outDir": "./public",
    "target": "es5",
    "sourceMap": true,
    "noImplicitAny": true,
    "importHelpers" : true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "strict": true,
    "resolveJsonModule": true
  },
  "include": [
    "./client/**/*.ts",
    "./client/**/*.tsx",
    "./*.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "compileOnSave": false,
  "buildOnSave": false
}